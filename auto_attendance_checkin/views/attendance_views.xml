<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to view all attendance records -->
    <record id="action_auto_attendance_view" model="ir.actions.act_window">
        <field name="name">Auto Attendance Records</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No attendance records found!
            </p>
            <p>
                Attendance records will be automatically created when users log in and log out.
            </p>
        </field>
    </record>

    <!-- Menu item to access attendance records -->
    <menuitem 
        id="menu_auto_attendance_records"
        name="Auto Attendance Records"
        action="action_auto_attendance_view"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="50"
        groups="base.group_user"/>
</odoo>


